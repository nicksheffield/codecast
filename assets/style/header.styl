.header
	background c-brand-bg
	color c-brand-c
	text-align center
	
	display flex
	justify-content space-between
	padding 1em
	
	h1
		margin 0
		font-size 1.5em
		padding 0.3em

	nav
		display flex
		
	nav ul
		list-style none
		padding 0
		margin 0
		display flex
		
		li
			display flex
		
		a
			color c-brand-c
			text-decoration none
			display block
			display flex
			align-items center
			padding 0 1em
			
			i.fa
				margin-right 0.5em
			
			&:hover
				background rgba(255, 255, 255, 0.3)