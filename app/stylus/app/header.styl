.site-header
	color color-header-text
	background color-header-bg
	padding 0 0 0 1.5em
	min-height 40px
	max-height 40px
	height 40px
	cursor default
	user-select none
	-webkit-app-region drag
	-webkit-font-smoothing antialiased
	
	h1
		margin 0
		font-size 0.9em
		pointer-events none
		
		i.fa
			margin-right 0.7em
		
	.beta, .version
		font-size 0.8em
		color rgba(255, 255, 255, 0.5)
		margin-left 1em

	nav
		
		ul
			list-style none
			margin 0
			padding 0
			
			a
				display inline-block
				color inherit
				text-decoration none !important
				box-shadow -1px 0 0 rgba(255, 255, 255, 0.5)
				padding 0.7em
				height 40px
				
				&:hover
					color inherit
					text-decoration none
					background rgba(255, 255, 255, 0.2)
				
				&.current
					background color-darker
					color #000
					box-shadow none
				
				span
					font-size 0.8em