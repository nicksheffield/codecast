.btn
	outline 0 !important
	border 0
	
	&.btn-icon
		
		i.fa
			margin-right 0.5em
			
	&.btn-icon-right
		
		i.fa
			margin-left 0.5em
	
	&.btn-normal
		color #000
		background color-darkest
		border-color color-darkest
		
		&:hover
			color #aaa
	
	&.btn-disabled
		cursor default
		
		&:active
			box-shadow none !important
	
	
	&.btn-scan
		position relative
		overflow hidden
		text-align center
		width 85px
		
		&.btn-scanning
			color #fff
			background #333
			
			i.fa
				margin-right 0
				
			&:hover
				background #333
		
		& > *
			z-index 2
			position relative
		
		.scan-progress
			position absolute
			top 0
			left 0
			height 100%
			transition width 0.2s
			z-index 1