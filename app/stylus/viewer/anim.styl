@keyframes glow {
	0% {
		text-shadow 0 0 10px alpha(changed-color, 0)
	}
	50% {
		text-shadow 0 0 10px alpha(changed-color, 1)
	}
	100% {
		text-shadow 0 0 10px alpha(changed-color, 0)
	}
}

@keyframes light-glow {
	0% {
		text-shadow 0 0 10px alpha(light-changed-color, 0)
	}
	50% {
		text-shadow 0 0 10px alpha(light-changed-color, 1)
	}
	100% {
		text-shadow 0 0 10px alpha(light-changed-color, 0)
	}
}