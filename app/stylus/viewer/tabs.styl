.tabs
	font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
	user-select none
	min-height 40px
	
	.tab
		max-width 200px
		padding 0 3.5em 0 2em
		height 40px
		line-height 40px
		font-size 0.8em
		overflow hidden
		// box-shadow 1px 0 0 lighten(navbg, 15%)
		cursor pointer
		position relative
		white-space nowrap
		border-bottom 2px solid rgba(0, 0, 0, 0)
		transition background 0.2s
		line-height normal
		flex 1
		
		&:hover
			.close-btn
				transform scale(1)
		
			
		.close-btn
			transform scale(0)
			position absolute
			top calc(50% - 0.6em)
			right 1em
			background rgba(0, 0, 0, 0)
			border 0
			transition transform 0.2s ease
			outline 0
			padding 0
			
			i.fa
				font-size 1.5em
				transition color 0.1s ease
			
			&:hover
				cursor pointer